<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tag_pink"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView android:id="@+id/tv_day" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/pink_primary" android:textSize="22sp" android:textStyle="bold" />
            <TextView android:id="@+id/tv_month" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/pink_primary" android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <TextView android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/text_primary" android:textSize="15sp" android:textStyle="bold" />
            <TextView android:id="@+id/tv_time_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/text_hint" android:textSize="12sp" android:layout_marginTop="4dp" />
            <TextView android:id="@+id/tv_attendees" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/text_hint" android:textSize="12sp" android:layout_marginTop="2dp" />
            <com.google.android.material.chip.ChipGroup android:id="@+id/chip_tags" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" app:chipSpacingHorizontal="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
